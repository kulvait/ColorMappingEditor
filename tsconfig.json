{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],         // <-- includes HTML/DOM types
    "baseUrl": "./src",
    "paths": {
      "object-assign-deep": ["../node_modules/object-assign-deep"]
    }
  },
  "include": ["src"]
}
